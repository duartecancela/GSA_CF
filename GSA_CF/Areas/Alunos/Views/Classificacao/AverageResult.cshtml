@model IEnumerable<GSA_CF.Models.Classificacao>


@{
    ViewBag.Title = "AverageResult";
}

<h2>AverageResult</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nome")
        </th>
        <th>
            @Html.DisplayName("Nota")
        </th>
        <th>
            @Html.DisplayName("Observação")
        </th>
        <th>
            @Html.DisplayName("Nome Aluno")
        </th>
        <th>
            @Html.DisplayName("Epoca")
        </th>
        <th>
            @Html.DisplayName("UC")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Obs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aluno.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Epoca.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uc.Nome)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<h2>Average Result</h2>

<h2>@ViewBag.Total</h2>



